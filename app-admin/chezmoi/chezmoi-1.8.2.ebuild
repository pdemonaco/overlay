src_compile() {
	CMD_VERSION="${EGO_PN}/cmd.version=${PV}"
	CMD_DATE="${EGO_PN}/cmd.date=$(date -u +%Y-%m-%dT%H:%M:%SZ)"

	ego_pn_check
	GOPATH="${WORKDIR}/${P}:$(get_golibdir_gopath)" \
		GOCACHE="${T}/go-cache" \
		go build -o "${T}/${PN}" -v -work -x \
		-ldflags "-s -w -X ${CMD_VERSION} -X ${CMD_DATE}" \
		"${EGO_PN}"
}

src_install() {
	einstalldocs
	dobin "${T}/chezmoi"
}
